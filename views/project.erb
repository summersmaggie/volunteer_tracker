<h2><em><%= @project.title() %> Project Details</em></h2>

<% if @project.volunteers().any?() %>
  <h3>Here are all the volunteers for this project:</h3>

    <% @project.volunteers().each() do |volunteer| %>
      <h4><a href="/volunteers/<%= volunteer.id()%>"><%= volunteer.name() %></a><h4>
    <% end %>

<% else %>
    <h4>There are no volunteers for this project yet!</h4>
<% end %>

<br>
<br>

<h3>Add a volunteer to <%= @project.title() %> project: </h3>

<form action="/project/volunteers" method="post">
  <input id="project_id" name="project_id" type="hidden" value="<%= @project.id() %>">

  <label for ="name">Name of Volunteer:</label>
  <input id="name" name="name" type="text">

  <button type="submit" class="btn btn-success">Add volunteer</button>
</form>

<br>

<p><a href="/projects/<%= @project.id() %>/edit">Edit Project</a></p>
<p><a href="/">Return Home</a></p>
